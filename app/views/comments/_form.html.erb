<%= form_with(model: [@post, comment]) do |form| %>
  <% if comment.errors.any? %>
    <div class="notification is-danger">
      <h2 class="title is-4"><%= pluralize(comment.errors.count, "error") %> no permiti√≥ que se guardara el comentario:</h2>

      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content, "Comentario:", class: "label" %>
    <div class="control">
      <%= form.text_area :content, rows: 5, class: "textarea" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Publicar comentario", class: "button is-primary" %>
    </div>
  </div>
<% end %>

