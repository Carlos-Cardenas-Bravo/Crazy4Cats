<p class="notification is-success"><%= notice %></p>

<% content_for :title, "Comentarios" %>

<section class="section">
  <div class="container">
    <h1 class="title is-3">Comentarios</h1>

    <div id="comments">
      <% @comments.each do |comment| %>
        <div class="box">
          <%= render comment %>
          <p>
            <%= link_to "Ver este comentario", comment, class: "button is-link is-small" %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="buttons">
      <%= link_to "Nuevo comentario", new_comment_path, class: "button is-primary" %>
    </div>
  </div>
</section>
