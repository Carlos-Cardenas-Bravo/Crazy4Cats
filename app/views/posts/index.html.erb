<% content_for :title, "Posts" %>

<h1 class="title is-3">Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class: "button is-link is-light" %>
    </p>
  <% end %>
</div>

<%== pagy_bulma_nav(@pagy) if @pagy.pages > 1 %>