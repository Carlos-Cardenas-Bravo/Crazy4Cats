<h2 class="title is-3">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <label class="label"><%= f.label :password, "New password" %></label>
    <% if @minimum_password_length %>
      <p class="help is-info"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
    <% end %>
    <div class="control">
      <%= f.password_field :password, class: "input", autofocus: true, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password_confirmation, "Confirm new password" %></label>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Change my password", class: "button is-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
