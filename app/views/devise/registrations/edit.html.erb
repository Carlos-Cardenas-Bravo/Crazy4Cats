    <label class="label"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i></label>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
    </div>
    <% if @minimum_password_length %>
      <p class="help">Minimum <%= @minimum_password_length %> characters</p>
    <% end %>
  </div>

