<h2 class="title is-3">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <label class="label"><%= f.label :email %></label>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password %></label>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="control">
        <label class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </label>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="control">
      <%= f.submit "Iniciar sesión", class: "button is-primary" %>
    </div>
  </div>
<% end %>

<%= link_to "Olvidaste tu contraseña?", new_password_path(resource_name) %>

